</head>
<body>
    <!-- HTML goes here -->
<div id="box1"></div>
<button type="button" id="colorChange" onClick="changeColor()">Make red</button>



    <script type="text/javascript">
        var count =0;
        var colors =["#00FF00","#FF0000","#00FF00","#FF0000"];
        function changeColor() {
            if(count>=colors.length-1){
                count=0;
            }
            else{
                count++;
            }
            var col=document.getElementById("box1");
            col.style.backgroundColor=colors[count];

            var text=document.getElementById("colorChange").firstChild;
            text.data=text.data=="Make green"?"Make Red":"Make Green";
        }
    </script>
</body>
